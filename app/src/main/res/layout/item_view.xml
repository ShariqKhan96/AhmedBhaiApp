<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_view"
    android:layout_height="wrap_content"

    android:layout_marginBottom="10dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <ImageView
        android:id="@+id/clothImage"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/clothImage"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="45dp"
        android:text="40 $"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <LinearLayout

        android:layout_toEndOf="@+id/clothImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cloth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:text="Jet Black Vemo" />

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="7dp"
            android:id="@+id/coth_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium" />

        <TextView

            android:textColor="@android:color/black"
            android:layout_marginTop="7dp"
            android:id="@+id/cloth_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Black" />

        <TextView

            android:textColor="@android:color/black"
            android:layout_marginTop="7dp"
            android:id="@+id/cloth_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="23 # shelf" />

    </LinearLayout>
</RelativeLayout>

</RelativeLayout>
